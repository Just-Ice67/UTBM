import type { CollectionEntry } from 'astro:content'
import { getCollection } from 'astro:content'

export const getAllPosts = async (): Promise<CollectionEntry<'posts'>[]> => {
    return getCollection('posts')
}
export const getAllTags = (posts: CollectionEntry<'posts'>[]): string[] => {
    return [...new Set(posts.flatMap((post) => { return post.data.tags as string[] }))]
}
